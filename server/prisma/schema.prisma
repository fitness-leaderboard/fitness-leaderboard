// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Tables and Profile Tables
model User {
  id        Int        @id @default(autoincrement())
  email     String
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Profile   Profile?
  APIToken  APIToken[]

  @@unique([email])
}

model Profile {
  id                 Int                  @id @default(autoincrement())
  user               User                 @relation(fields: [id], references: [id])
  name               String
  birthday           DateTime
  bio                String
  profilePicture     String               @default("https://upload.wikimedia.org/wikipedia/commons/thumb/2/2c/Default_pfp.svg/1200px-Default_pfp.svg.png")
  ranks              Rank[]
  ProfileBadge       ProfileBadge[]
  Activity           Activity[]
  ProfileLeaderboard ProfileLeaderboard[]

  @@unique([id])
}

// Badge Tables
model Badge {
  id           Int            @id @default(autoincrement())
  name         String
  description  String
  iconPath     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  ProfileBadge ProfileBadge[]
}

// Many to Many Table to store badges of a user
model ProfileBadge {
  profile   Profile  @relation(fields: [profileId], references: [id])
  profileId Int
  badge     Badge    @relation(fields: [badgeId], references: [id])
  badgeId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([profileId, badgeId])
}

// Leaderboard Tables
model Leaderboard {
  id                 Int                  @id @default(autoincrement())
  name               String
  ActivityType       ActivityType         @relation(fields: [activityTypeId], references: [id])
  activityTypeId     Int
  createdAt          DateTime             @default(now())
  startDate          DateTime             @default(now())
  endDate            DateTime             @default(now())
  ranks              Rank[]
  Activity           Activity[]
  ProfileLeaderboard ProfileLeaderboard[]

  @@unique([activityTypeId, startDate, endDate])
}

model ProfileLeaderboard {
  leaderboard   Leaderboard @relation(fields: [leaderboardId], references: [id])
  leaderboardId Int
  profile       Profile     @relation(fields: [profileId], references: [id])
  profileId     Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([leaderboardId, profileId])
}

// Activity Tables
model ActivityType {
  id          Int           @id @default(autoincrement())
  name        String
  Activity    Activity[]
  Leaderboard Leaderboard[]
}

model Activity {
  id             Int          @id @default(autoincrement())
  activity       ActivityType @relation(fields: [activityTypeId], references: [id])
  activityTypeId Int
  leaderboard    Leaderboard  @relation(fields: [leaderboardId], references: [id])
  leaderboardId  Int
  Profile        Profile?     @relation(fields: [profileId], references: [id])
  profileId      Int?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  startDate      DateTime
  distance       Decimal
  movingTime     Int
  elapsedTime    Int
  elevation      Int
  avgSpeed       Decimal
  score          Decimal

  @@unique([profileId, leaderboardId, startDate])
}

// Table to store rank of a user in a leaderboard daily
model Rank {
  id            Int         @id @default(autoincrement())
  leaderboard   Leaderboard @relation(fields: [leaderboardId], references: [id])
  leaderboardId Int
  Profile       Profile?    @relation(fields: [profileId], references: [id])
  profileId     Int?
  rank          Int
  date          DateTime    @default(now())

  @@unique([profileId, leaderboardId, rank, date])
}

//API Tables
model APIType {
  id        Int        @id @default(autoincrement())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  APIToken  APIToken[]

  @@unique([name])
}

model APIToken {
  id           Int      @id @default(autoincrement())
  apiType      APIType  @relation(fields: [apiTypeId], references: [id])
  apiTypeId    Int
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
  accessToken  String   @unique
  refreshToken String   @unique
  expiresAt    DateTime
  expiresin    Int
  scopes       String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
